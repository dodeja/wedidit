<div id="new" class="inner">
	<h1>Share your Sign</h1>
	<p>&nbsp;</p>
	<h3>You helped make it happen.  Go ahead, do a little dance.</h3>
	<p>&nbsp;</p>
	<p><strong><span class="red">*</span> - Required field.</strong>  Your e-mail won't be shared with anyone, and we hate spam.</p>
	
	<div class="field">&nbsp;</div>
	<% form_for(@post, :html => { :multipart => true }) do |f| %>
	  <%= f.error_messages %>

	  <div class="field">
	    <span class="red">*</span> <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </div>
	  <div class="field">
	    <span class="red">*</span> <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </div>

	<div class="field">
    	<span class="red">*</span> <%= f.label :image %><br />
	 	<%= f.file_field :image %>
	</div>
	
	  <div class="field">
	    <%= f.label :message %><br />
	    <%= f.text_area :content, :rows => 10 %>
	  </div>

	  <h3>Where are you at?</h3>
	  <p>&nbsp;</p>

	  <div class="field">
	    <span class="red">*</span> <%= f.label :city %><br />
	    <%= f.text_field :city %>
	  </div>
	  <div class="field">
	    <label for="state"><span class="red">*</span> State / Region<br />
	    <%= f.text_field :state %>
	  </div>
	  <div class="field">
	    <span class="red">*</span> <%= f.label :country %><br />
		<%= country_select(:post, :country, ["United States", "United Kingdom", "Canada"], {}, :class => "select_country") %>
	  </div>
	  <div class="field">
	    <%= f.submit "Submit" %>
	  </div>
	<% end %>

	<%= link_to 'Back', posts_path %>
</div>