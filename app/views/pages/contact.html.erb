<div class="inner">
	<h1>Contact Us</h1>
	<p>&nbsp;</p>
	<h3>Have a question or want to get in touch?  Hit us up!</h3>
	<p>&nbsp;</p>		
<% form_tag :action => "send_mail" do %>
  <p>
    <%= label_tag "email[name]", "Name" %><br />
    <%= text_field :email, :name, :class => "text_field" %>
  </p>

  <p>
    <%= label_tag "email[address]", "Your Email Address" %><br />
    <%= text_field :email, :address, :class => "text_field" %>
  </p>

  <p>
    <%= label_tag "email[subject]", "Subject" %><br />
    <%= text_field :email, :subject, :class => "text_field" %>
  </p>

  <p>
    <%= label_tag "email[body]", "Your Message" %><br />
    <%= text_area :email, :body, :rows => 8, :cols => 50 %>
  </p>

  <p>
    <%= submit_tag "Submit" %>
  </p>
<% end %>

</div>